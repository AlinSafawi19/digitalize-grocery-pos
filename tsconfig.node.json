{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "dist-electron",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@main/*": ["src/main/*"],
      "@shared/*": ["src/shared/*"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/main/**/*", "src/shared/**/*"]
}

